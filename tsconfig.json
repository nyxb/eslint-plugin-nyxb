{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "Bundler",
    "types": [
      "vitest/globals"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "vendor"
  ]
}
